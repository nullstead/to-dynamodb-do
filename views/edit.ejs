
<%- include('partials/header') %>

<section class="form-container">
  <h2>Edit Todo</h2>
  <form action="/edit/<%= todo.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= todo.title %>" required>
    </div>
    
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="5"><%= todo.description %></textarea>
    </div>
    
    <div class="form-group">
      <label for="completed">Status</label>
      <select id="completed" name="completed">
        <option value="false" <%= todo.completed ? '' : 'selected' %>>Pending</option>
        <option value="true" <%= todo.completed ? 'selected' : '' %>>Completed</option>
      </select>
    </div>
    
    <div class="form-buttons">
      <button type="submit" class="btn btn-submit">Update Todo</button>
      <a href="/" class="btn btn-cancel">Cancel</a>
    </div>
  </form>
</section>

<%- include('partials/footer') %>